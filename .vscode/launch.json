{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "BlazorApp (.NET)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0/BlazorApp.dll",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DEV_AUTH_ADMIN": "true"
      }
    }
  ]
}
