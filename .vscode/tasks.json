{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "--configuration",
        "Debug"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "clean",
      "type": "process",
      "command": "dotnet",
      "args": [
        "clean",
        "--configuration",
        "Release"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-azure-linux",
      "type": "process",
      "command": "dotnet",
      "args": [
        "publish",
        "${workspaceFolder}/BlazorApp.csproj",
        "--configuration",
        "Release",
        "--runtime",
        "linux-x64",
        "--self-contained",
        "false",
        "-o",
        "${workspaceFolder}/.azure-publish",
        "/p:UseAppHost=false"
      ],
      "problemMatcher": "$msCompile",
      "dependsOn": "clean"
    }
  ]
}
